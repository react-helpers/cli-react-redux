import { put, call, takeEvery } from 'redux-saga/effects';
import * as actionType from './actionTypes';

export function* fetchDataAsync() {
  try {
    const url = 'https://api.github.com';
    const endpoint = `${url}/`;
    const fetchOpts = {
      method: 'GET',
    };
    const response = yield call(fetch, endpoint, fetchOpts);
    if (response.ok) {
      const results = yield call([response, response.json]);
      yield put({
        type: actionType.FETCH_DATA_SUCCESS,
        payload: { results },
      });
    } else {
      const error = new Error(`${response.status} ${response.statusText}`);
      yield put({
        type: actionType.FETCH_DATA_FAILURE,
        payload: { error },
      });
      throw error;
    }
  } catch (error) {
    yield put({
      type: actionType.REPORT_ERROR,
      payload: { error },
    });
    console.log(error);
  }
}

export function* watch'<NameOf>'Sagas() {
  yield takeEvery(actionType.FETCH_DATA_ASYNC, fetchDataAsync);
}
